<%=form_for @player do |f| %>
  <%=label_tag :name, "Name" %>
  <%=f.text_field :name %><br>
  <%=label_tag :email, "Email"%>
  <%=f.text_field :email%><br>
  <%=label_tag :password, "Password" %>
  <%=f.text_field :password %><br>
  <%=label_tag :payment %>
  <%=text_area_tag :payment, "How do you plan to pay?", size: "24x6" %><br>
  <%=f.submit "Submit" %>
<% end %>